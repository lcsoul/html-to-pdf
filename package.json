    "keywords": [
      "pdf",
      "puppeteer",
      "docker",
      "express"
    ],
    "author": "liuchang",
    "license": "MIT",
    "dependencies": {
      "express": "^4.18.2",
      "puppeteer": "^21.0.0",
      "body-parser": "^1.20.2",
      "morgan": "^1.10.0",
      "helmet": "^7.0.0"
    },
    "devDependencies": {
      "nodemon": "^3.1.0"
    },
    "engines": {
      "node": ">=16.0.0"
    },
    "puppeteer": {
      "args": [
        "--disable-dev-shm-usage",
        "--no-sandbox",
        "--disable-setuid-sandbox"
      ]
    }
  }