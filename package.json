{
    "name": "pdf-generation-service",
    "version": "1.0.0",
    "description": "Dockerized PDF generation service using Puppeteer",
    "main": "src/app.js",
    "scripts": {
      "start": "node src/app.js",
      "dev": "nodemon src/app.js",
      "test": "echo \"Error: no test specified\" && exit 1"
